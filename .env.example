# AI Vision CLI Environment Variables
# Copy this file to .env and fill in your actual values

# Provider Selection (optional - can be set in config file)
IMAGE_PROVIDER=google

# Google Gemini API Credentials
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Google Vertex AI Credentials
# Path to your service account JSON file
VERTEX_CREDENTIALS=/path/to/your/service-account.json

# Google Cloud Storage Configuration (required for Vertex AI)
GCS_BUCKET_NAME=your-gcs-bucket-name
GCS_PROJECT_ID=your-gcp-project-id
GCS_REGION=us-central1

# Model Configuration (optional)
IMAGE_MODEL=gemini-2.0-flash-exp

# AI Parameters (optional - these are defaults)
TEMPERATURE=0.4
TOP_P=0.95
TOP_K=32
MAX_TOKENS=4096

# Function-specific Parameters (optional)
TEMPERATURE_FOR_ANALYZE_IMAGE=0.4
TEMPERATURE_FOR_COMPARE_IMAGES=0.3
TEMPERATURE_FOR_DETECT_OBJECTS_IN_IMAGE=0.1

# File Processing Limits (optional)
MAX_IMAGE_SIZE=20971520          # 20MB in bytes

# File Upload Thresholds (optional)
GEMINI_FILES_API_THRESHOLD=10485760   # 10MB in bytes
VERTEX_AI_FILES_API_THRESHOLD=0       # Always use GCS

# Logging (optional)
LOG_LEVEL=info
NODE_ENV=production